      .rank-badge.rank-1 { background: rgba(255, 215, 0, 0.2); border-color: rgba(255, 215, 0, 0.5); color: #ffd700; font-weight: 700; }
      .rank-badge.rank-2 { background: rgba(192, 192, 192, 0.2); border-color: rgba(192, 192, 192, 0.5); color: #c0c0c0; font-weight: 700; }
      .rank-badge.rank-3 { background: rgba(205, 127, 50, 0.2); border-color: rgba(205, 127, 50, 0.5); color: #cd7f32; font-weight: 700; }

      .user-cell { display: flex; align-items: center; gap: 1rem; }
      .user-avatar { width: 40px; height: 40px; border-radius: 50%; border: 2px solid rgba(205, 161, 84, 0.3); }
      .user-name { font-size: 0.95rem; color: var(--text-primary); font-weight: 500; }
      .value-cell { font-size: 1rem; font-weight: 600; color: var(--text-primary); text-align: right; }

      .button-container {
        padding: 1.5rem;
        border-top: 1px solid rgba(205, 161, 84, 0.2);
        display: flex;
        justify-content: center;
      }

      .toggle-button {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        padding: 0.75rem 1.5rem;
        background: rgba(205, 161, 84, 0.2);
        border: 1px solid rgba(205, 161, 84, 0.4);
        border-radius: 6px;
        color: #ffd166;
        font-family: var(--font-primary);
        font-size: 0.95rem;
        font-weight: 500;
        cursor: pointer;
        transition: all 0.3s ease;
      }

      .toggle-button:hover {
        background: rgba(205, 161, 84, 0.3);
        border-color: rgba(205, 161, 84, 0.6);
        transform: translateY(-1px);
      }

      .toggle-button .chevron { transition: transform 0.3s ease; }
      .toggle-button.expanded .chevron { transform: rotate(180deg); }

      @keyframes fadeInUp {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
      }

      @media (max-width: 768px) {
        .container { padding: 2rem 1rem; }
        .page-title { font-size: 1.75rem; }
        .section-title { font-size: 1.35rem; }
        .section-header { padding: 1.25rem 1.5rem; }
        .leaderboard-table th, .leaderboard-table td { padding: 0.75rem 1rem; }
        .rank-col { width: 70px; }
        .value-col { width: 100px; }
        .user-avatar { width: 32px; height: 32px; }
        .user-name { font-size: 0.85rem; }
        .value-cell { font-size: 0.9rem; }
      }
    </style>

    <script define:vars={{ leaderboards, defaultAvatar }}>
      const AVATAR_RATE_PER_MINUTE = 100;
      const AVATAR_INTERVAL_MS = Math.ceil(60000 / AVATAR_RATE_PER_MINUTE);

      const avatarQueue = [];
      const queued = new Set();
      const loaded = new Set();
      const inflight = new Set();
      const cache = new Map();

      let lastTick = 0;
      let pumpScheduled = false;

      function normalizeLogin(v) {
        return (v || '').toString().trim().toLowerCase();
      }

      function setAvatarEverywhere(userLogin, url) {
        const login = normalizeLogin(userLogin);
        const imgs = document.querySelectorAll('.user-avatar');
        for (const img of imgs) {
          const imgLogin = normalizeLogin(img.getAttribute('data-userlogin'));
          if (imgLogin === login) img.src = url;
        }
      }

      function enqueueUser(userLogin) {
        const login = normalizeLogin(userLogin);
        if (!login) return;
        if (loaded.has(login)) return;
        if (inflight.has(login)) return;
        if (queued.has(login)) return;
        queued.add(login);
        avatarQueue.push(login);
        pump();
      }

      function getVisibleRowsInSection(sectionId) {
        const section = document.querySelector(`[data-section-id="${sectionId}"]`);
        if (!section) return [];
        const content = section.querySelector('.section-content');
        if (!content || !content.classList.contains('expanded')) return [];
        const rows = Array.from(section.querySelectorAll('.leaderboard-row'));
        const visible = rows.filter(r => r.style.display !== 'none');
        const topOnly = visible.filter(r => !r.classList.contains('hidden-row'));
        const result = topOnly.length > 0 ? topOnly : visible;
        return result.slice(0, 10);
      }

      function enqueueVisibleAvatarsForSection(sectionId) {
        const rows = getVisibleRowsInSection(sectionId);
        rows.forEach(row => {
          const login = normalizeLogin(row.getAttribute('data-userlogin'));
          if (login) enqueueUser(login);
        });
      }

      function enqueueInitialTop10Each() {
        document.querySelectorAll('.leaderboard-section').forEach(section => {
          const rows = Array.from(section.querySelectorAll('.leaderboard-row'))
            .filter(r => r.style.display !== 'none')
            .slice(0, 10);
          rows.forEach(row => {
            const login = normalizeLogin(row.getAttribute('data-userlogin'));
            if (login) enqueueUser(login);
          });
        });
      }

      async function fetchAvatar(login) {
        const cached = cache.get(login);
        if (cached) return cached;

        const url = `https://decapi.me/twitch/avatar/${encodeURIComponent(login)}`;
        const res = await fetch(url, { cache: 'no-store' });
        if (!res.ok) return null;
        const text = (await res.text()).trim();
        if (!text) return null;
        const t = text.toLowerCase();
        if (t.includes('error')) return null;
        if (t.includes('user not found')) return null;

        cache.set(login, text);
        return text;
      }

      async function processOne() {
        while (avatarQueue.length > 0) {
          const login = avatarQueue.shift();
          queued.delete(login);
          if (!login) continue;
          if (loaded.has(login)) continue;
          if (inflight.has(login)) continue;

          inflight.add(login);

          try {
            const avatarUrl = await fetchAvatar(login);
            loaded.add(login);
            setAvatarEverywhere(login, avatarUrl || defaultAvatar);
          } catch (_) {
            loaded.add(login);
            setAvatarEverywhere(login, defaultAvatar);
          } finally {
            inflight.delete(login);
          }

          break;
        }
      }

      function scheduleNextPump() {
        if (pumpScheduled) return;
        pumpScheduled = true;
        setTimeout(() => {
          pumpScheduled = false;
          pump();
        }, AVATAR_INTERVAL_MS);
      }

      function pump(now = performance.now()) {
        if (avatarQueue.length === 0) return;

        const elapsed = now - lastTick;
        if (elapsed < AVATAR_INTERVAL_MS) {
          scheduleNextPump();
          return;
        }

        lastTick = now;
        processOne().finally(() => {
          if (avatarQueue.length > 0) scheduleNextPump();
        });
      }

      const sectionHeaders = document.querySelectorAll('.section-header');

      sectionHeaders.forEach(header => {
        header.addEventListener('click', () => {
          const sectionId = header.getAttribute('data-section');
          const content = header.nextElementSibling;
          const isExpanded = content.classList.contains('expanded');

          if (isExpanded) {
            content.classList.remove('expanded');
            content.classList.add('collapsed');
            header.classList.remove('expanded');
          } else {
            content.classList.remove('collapsed');
            content.classList.add('expanded');
            header.classList.add('expanded');
            setTimeout(() => enqueueVisibleAvatarsForSection(sectionId), 50);
          }
        });
      });

      const sortHeaders = document.querySelectorAll('.sortable');
      const sortStates = {};

      sortHeaders.forEach(header => {
        const sectionId = header.getAttribute('data-section');
        const sortKey = header.getAttribute('data-sort-key');
        const stateKey = `${sectionId}-${sortKey}`;
        sortStates[stateKey] = 'desc';

        header.addEventListener('click', () => {
          const section = document.querySelector(`[data-section-id="${sectionId}"]`);
          const tbody = section.querySelector(`[data-tbody="${sectionId}"]`);
          const rows = Array.from(tbody.querySelectorAll('.leaderboard-row'));

          sortStates[stateKey] = sortStates[stateKey] === 'asc' ? 'desc' : 'asc';
          const isAsc = sortStates[stateKey] === 'asc';

          section.querySelectorAll('.sortable').forEach(h => h.classList.remove('active', 'asc', 'desc'));
          header.classList.add('active', isAsc ? 'asc' : 'desc');

          rows.sort((a, b) => {
            const aData = JSON.parse(a.getAttribute('data-row-data'));
            const bData = JSON.parse(b.getAttribute('data-row-data'));
            const aValue = parseInt(aData[sortKey]);
            const bValue = parseInt(bData[sortKey]);
            return isAsc ? aValue - bValue : bValue - aValue;
          });

          rows.forEach((row, index) => {
            tbody.appendChild(row);
            const rankBadge = row.querySelector('.rank-badge');
            rankBadge.textContent = `#${index + 1}`;
            rankBadge.className = 'rank-badge';
            if (index === 0) rankBadge.classList.add('rank-1');
            else if (index === 1) rankBadge.classList.add('rank-2');
            else if (index === 2) rankBadge.classList.add('rank-3');
          });

          enqueueVisibleAvatarsForSection(sectionId);
        });
      });

      const toggleButtons = document.querySelectorAll('.toggle-button');

      toggleButtons.forEach(button => {
        const leaderboardId = button.getAttribute('data-toggle');
        let isExpanded = false;

        button.addEventListener('click', () => {
          const section = document.querySelector(`[data-section-id="${leaderboardId}"]`);
          const hiddenRows = section.querySelectorAll('.hidden-row');

          isExpanded = !isExpanded;

          hiddenRows.forEach(row => {
            if (isExpanded) row.classList.add('show-all');
            else row.classList.remove('show-all');
          });

          const label = button.querySelector('.toggle-label');
          if (label) label.textContent = isExpanded ? 'Weniger anzeigen' : 'Mehr anzeigen';
          button.classList.toggle('expanded', isExpanded);

          enqueueVisibleAvatarsForSection(leaderboardId);
        });
      });

      const searchInputs = document.querySelectorAll('.search-input');

      searchInputs.forEach(input => {
        const leaderboardId = input.getAttribute('data-search');
        const section = document.querySelector(`[data-section-id="${leaderboardId}"]`);
        const rows = Array.from(section.querySelectorAll('.leaderboard-row'));

        input.addEventListener('input', (e) => {
          const searchTerm = (e.target.value || '').toLowerCase().trim();

          if (searchTerm === '') {
            rows.forEach((row, index) => {
              row.style.display = '';
              if (index >= 10 && !row.classList.contains('show-all')) row.classList.add('hidden-row');
            });
          } else {
            rows.forEach(row => {
              const username = row.getAttribute('data-username') || '';
              const userlogin = row.getAttribute('data-userlogin') || '';
              if (username.includes(searchTerm) || userlogin.includes(searchTerm)) {
                row.style.display = '';
                row.classList.remove('hidden-row');
              } else {
                row.style.display = 'none';
              }
            });
          }

          enqueueVisibleAvatarsForSection(leaderboardId);
        });
      });

      enqueueInitialTop10Each();
    </script>
  </body>
</html>
