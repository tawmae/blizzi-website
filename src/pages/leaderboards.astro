import Header from '../components/Header.astro';
import { readdir, readFile } from 'node:fs/promises';
import { join } from 'node:path';

const defaultAvatar = "https://static-cdn.jtvnw.net/user-default-pictures-uv/dbdc9198-def8-11e9-8681-784f43822e80-profile_image-70x70.png";

const leaderboardsPath = join(process.cwd(), 'public', 'api', 'leaderboards');
const files = await readdir(leaderboardsPath);
const jsonFiles = files.filter(file => file.endsWith('.json'));

const leaderboards = await Promise.all(
  jsonFiles.map(async (file) => {
    const filePath = join(leaderboardsPath, file);
    const fileContent = await readFile(filePath, 'utf-8');
    const jsonData = JSON.parse(fileContent);

    return {
      id: file.replace('.json', ''),
      name: jsonData.config.displayName,
      config: jsonData.config,
      data: jsonData.data
    };
  })
);

const backgroundImages = [1, 2, 3, 4, 5, 6, 7];
const randomBg = backgroundImages[Math.floor(Math.random() * backgroundImages.length)];
---

<html lang="de">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>BliZzi1337 - Leaderboards</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Rubik:wght@400;500;600;700;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Cinzel:wght@400;500;600;700;900&display=swap" rel="stylesheet" />
    <link href="https://fonts.cdnfonts.com/css/couture" rel="stylesheet" />
    <link href="https://fonts.cdnfonts.com/css/friz-quadrata" rel="stylesheet" />
    <link href="https://fonts.cdnfonts.com/css/morpheus" rel="stylesheet" />
  </head>
  <body style={`background-image: url('/backgrounds/${randomBg}.jpg')`}>
    <Header currentPath="/leaderboards" />

    <div class="container">
      <main>
        <h2 class="page-title">Leaderboards</h2>

        {leaderboards.map((leaderboard) => (
          <div class="leaderboard-section" data-section-id={leaderboard.id}>
            <button class="section-header" data-section={leaderboard.id}>
              <h3 class="section-title">{leaderboard.name}</h3>
              <svg class="section-chevron" width="24" height="24" viewBox="0 0 16 16" fill="currentColor">
                <path d="M4.5 6l3.5 3.5L11.5 6" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
              </svg>
            </button>

            <div class="section-content collapsed">
              <div class="leaderboard-container">
                <div class="search-container">
                  <input
                    type="text"
                    class="search-input"
                    data-search={leaderboard.id}
                    placeholder="Suche nach Benutzername..."
                  />
                  <svg class="search-icon" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <circle cx="11" cy="11" r="8"></circle>
                    <path d="m21 21-4.35-4.35"></path>
                  </svg>
                </div>

                <div class="leaderboard-wrapper">
                  <table class="leaderboard-table">
                    <thead>
                      <tr>
                        <th class="rank-col">Rang</th>
                        <th class="user-col">Benutzer</th>
                        {leaderboard.config.columns.map((column) => (
                          <th class="value-col sortable" data-sort-key={column.key} data-section={leaderboard.id}>
                            {column.label}
                            <svg class="sort-icon" width="12" height="12" viewBox="0 0 12 12" fill="currentColor">
                              <path d="M6 3l3 3H3zM6 9l3-3H3z" opacity="0.3"/>
                            </svg>
                          </th>
                        ))}
                      </tr>
                    </thead>
                    <tbody data-tbody={leaderboard.id}>
                      {leaderboard.data.map((entry, index) => (
                        <tr
                          class={`leaderboard-row ${index >= 10 ? 'hidden-row' : ''}`}
                          data-username={entry.UserName.toLowerCase()}
                          data-userlogin={entry.UserLogin.toLowerCase()}
                          data-row-data={JSON.stringify(entry)}
                        >
                          <td class="rank-cell">
                            <span class={`rank-badge ${index < 3 ? `rank-${index + 1}` : ''}`}>
                              #{index + 1}
                            </span>
                          </td>
                          <td class="user-cell">
                            <img
                              src={defaultAvatar}
                              alt={entry.UserName}
                              class="user-avatar"
                              data-userlogin={entry.UserLogin.toLowerCase()}
                            />
                            <span class="user-name">{entry.UserName}</span>
                          </td>
                          {leaderboard.config.columns.map((column) => (
                            <td class="value-cell" data-value={entry[column.key]} data-format={column.format}>
                              {column.format === 'time'
                                ? (() => {
                                    const seconds = parseInt(entry[column.key]);
                                    const hours = Math.floor(seconds / 3600);
                                    const minutes = Math.floor((seconds % 3600) / 60);
                                    return `${hours}h ${minutes}m`;
                                  })()
                                : parseInt(entry[column.key]).toLocaleString('de-DE')
                              }
                            </td>
                          ))}
                        </tr>
                      ))}
                    </tbody>
                  </table>
                </div>

                {leaderboard.data.length > 10 && (
                  <div class="button-container">
                    <button class="toggle-button" data-toggle={leaderboard.id}>
                      <span class="toggle-label">Mehr anzeigen</span>
                      <svg class="chevron" width="16" height="16" viewBox="0 0 16 16" fill="currentColor">
                        <path d="M4.5 6l3.5 3.5L11.5 6" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round"/>
                      </svg>
                    </button>
                  </div>
                )}
              </div>
            </div>
          </div>
        ))}
      </main>
    </div>

    <style>
      * { margin: 0; padding: 0; box-sizing: border-box; }

